<Context path="/">
	<Resource name="jdbc/testdb" auth="Container" type="javax.sql.DataSource"
		factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
		driverClassName="com.mysql.jdbc.Driver" maxActive="100" maxIdle="10"
		maxWait="10000" username="root" password="mysql" validationQuery="select 1"
		testWhileIdle="true" testOnBorrow="true" testOnConnect="true"
		url="jdbc:mysql://localhost:3306/testdb?autoReconnect=true" />
</Context>